{% extends '@layouts/one-sidebar/one-sidebar.html.twig' %}

{% set direction = 'right' %}

{% block headerContent %}
    {% include 'views/partials/header.html.twig' %}
{% endblock %}

{% block mainContentTop %}
    {% include '@components/horizontal-rule/horizontal-rule.html.twig' with {
        decorative: true,
    } %}
{% endblock %}

{% block articleHeader %}
    {# No title #}
{% endblock %}

{% block articleContent %}
    {% include '@components/image-with-text/image-with-text.html.twig' with {
        direction: 'left',
        title: pageTitle,
        content: post.content,
        image: mainImage,
    } %}
{% endblock %}

{% block sidebar %}
    {% for block in blocks %}
        {% include '@components/sidebar-block/sidebar-block.html.twig' with block %}
    {% endfor %}
{% endblock %}

{% block sidebarMobile %}
    {% for block in blocks %}
        {% set updatedBlock = block|merge({ isMobile }) %}
        {% include '@components/sidebar-block/sidebar-block.html.twig' with updatedBlock %}
    {% endfor %}
{% endblock %}

{% block mainContentBottom %}
    {% include '@components/horizontal-rule/horizontal-rule.html.twig' with {
        decorative: true,
    } %}
{% endblock %}

{% block footerContent %}
    {% include 'views/partials/footer.html.twig' %}
{% endblock %}

# Server name must end with .docker when using docker compose + dory
SERVER_NAME=justice.docker

# DON'T REMOVE THE EQUAL (=) SIGN, THE AUTO GEN SCRIPT NEEDS IT.
# -> Auto generated keys
# JWT_SECRET=
# # # # # # # # # # # # # # # # # # # # # # # # # #

WP_ENV=development
WP_HOME="http://${SERVER_NAME}"
WP_SITEURL="http://${SERVER_NAME}/wp"

# The endpoint URL for our CDN
# CDN_URL="http://${SERVER_NAME}:8080"

DB_NAME=justice
DB_HOST=mariadb
DB_USER=mysql
DB_PASSWORD=mysql

CACHE_HOST=redis
CACHE_SCHEME=''

# Used so composer can access GitHub repos, without rate limiting
COMPOSER_TOKEN=''
# Used to access relevanssi's private repo
RELEVANSSI_API_KEY=some_api_key

# WP Offload Media
WP_OFFLOAD_MEDIA_PRESET=minio
# AWS
AWS_ACCESS_KEY_ID=**********
AWS_SECRET_ACCESS_KEY=***************
# S3
S3_BUCKET_NAME=bucket-name
# CloudFront
CLOUDFRONT_URL=cdn.justice.docker
CLOUDFRONT_SCHEME=http

# A hexadecimal string to identify the image version when serving assets via the local CDN.
# In deployed environments, this is the full git commit hash.
# Here, it can just be any hex string of 8 characters. e.g. abcd1234
IMAGE_TAG=********

LOCAL_SSH_PASSWORD=ssh-password

SENTRY_DEV_ID=-[user]
SENTRY_DSN=********

# GOV Notify
# General template and api-key for gov notify
GOV_NOTIFY_API_KEY=""

# Email address for editors to contact CDPT for support.
SUPPORT_EMAIL="email@example.com"

# ClamAV
CLAM_DISABLED="true"
# CLAM_HOSTNAME="custom-clamav-hostname"

# During the rollout, what is the default version of the frontend?
FRONTEND_VERSION_DEFAULT=1
# Percentage of users that will see the new version of the frontend.
FRONTEND_ROLLOUT_PERCENTAGE=10
# Override the frontend version for testing purposes, or to force a specific version.
FRONTEND_VERSION_OVERRIDE=1

# Generate your keys here: https://roots.io/salts.html
AUTH_KEY='generate-key'
SECURE_AUTH_KEY='generate-key'
LOGGED_IN_KEY='generate-key'
NONCE_KEY='generate-key'
AUTH_SALT='generate-key'
SECURE_AUTH_SALT='generate-key'
LOGGED_IN_SALT='generate-key'
NONCE_SALT='generate-key'

# Entra API - see readme for more info.
OAUTH_CLIENT_ID=""
OAUTH_TENANT_ID=""
OAUTH_CLIENT_SECRET=""
